@model List<Company.DomainModels.Products>

@{
    ViewBag.Title = "Products";
    Layout = "~/Areas/Manager/Views/Shared/ManagerLayoutPage1.cshtml";
}

<h2>Products</h2>
<a href="/Manager/products/create">Create product</a>
<form class="form-inline" action="/Manager/products/index">
    @Html.Label("Search", new { @class = "mr-1" })
    @Html.TextBox("Search", ViewBag.search as string, new { @class = "form-control mr-1", placeholder = "Search" })

    <button type="submit" class="btn btn-primary">GO</button>
</form>

<table class="table">
    <tr class="table-secondary">
        <th style="width:15%">
            Photo
        </th>

        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=ProductID&IconClass=fa-sort-asc&Pagenum=1">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=ProductID&IconClass=fa-sort-desc&Pagenum=1">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:20%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=ProductName&IconClass=fa-sort-asc&Pagenum=1">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=ProductName&IconClass=fa-sort-desc&Pagenum=1">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=Price&IconClass=fa-sort-asc&Pagenum=1">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/admin/products/index?SortColumn=Price&IconClass=fa-sort-desc&Pagenum=1">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=DateOfPurchase&IconClass=fa-sort-asc&Pagenum=1">Date of Purchase</a>
                if (ViewBag.SortColumn == "DateOfPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=DateOfPurchase&IconClass=fa-sort-desc&Pagenum=1">Date of Purchase</a>
                if (ViewBag.SortColumn == "DateOfPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=AvailabilityStatus&IconClass=fa-sort-asc&Pagenum=1">Availability Status</a>
                if (ViewBag.SortColumn == "AvailabilityStatus")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/admin/products/index?SortColumn=AvailabilityStatus&IconClass=fa-sort-desc&Pagenum=1">Availability Status</a>
                if (ViewBag.SortColumn == "AvailabilityStatus")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=CategoryID&IconClass=fa-sort-asc&Pagenum=1">Category</a>
                if (ViewBag.SortColumn == "CategoryID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=CategoryID&IconClass=fa-sort-desc&Pagenum=1">Category</a>
                if (ViewBag.SortColumn == "CategoryID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=BrandID&IconClass=fa-sort-asc&Pagenum=1">Brand</a>
                if (ViewBag.SortColumn == "BrandID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=BrandID&IconClass=fa-sort-desc&Pagenum=1">Brand</a>
                if (ViewBag.SortColumn == "BrandID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/Manager/products/index?SortColumn=Active&IconClass=fa-sort-asc&Pagenum=1">Active</a>
                if (ViewBag.SortColumn == "Active")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/Manager/products/index?SortColumn=Active&IconClass=fa-sort-desc&Pagenum=1">Active</a>
                if (ViewBag.SortColumn == "Active")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="data:image;base64,@item.Photo" width="100" /></td>
            <td>@Html.DisplayFor(temp => item.ProductID)</td>
            <td>@Html.DisplayFor(temp => item.ProductName)</td>
            <td>
                @if (item.Price != null)
                {
                    @item.Price.Value.ToString("C")
                }

            </td>
            <td>
                @if (item.DateOfPurchase != null)
                {
                    @item.DateOfPurchase.Value.ToString("d/M/yyyy")
                }

            </td>
            <td>@item.AvailabilityStatus</td>

            <td>

                <span>@item.Categories.CategoryName</span>

            </td>

            <td>

                <span>@item.Brands.BrandName</span>


            </td>
            <td>@item.Active</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ProductID, controller = "Products", area = "Manager" });
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID, controller = "Products", area = "Manager" });
                @*<a href="/products/details/@item.ProductID">Details |</a>
                    <a href="/products/edit/@item.ProductID">Edit |</a>
                    <a href="/products/delete/@item.ProductID">Delete |</a>*@
            </td>
        </tr>
    }
    <tr>
        <td colspan="9">
            @{
                int PrevPageNum = ViewBag.PageNum - 1;

                if (PrevPageNum <= 0)
                {
                    PrevPageNum = 1;



                }

                int NextPageNum = ViewBag.PageNum + 1;
                if (NextPageNum >= ViewBag.NumOfPages)
                {
                    NextPageNum = ViewBag.NumOfPages;
                }
            }
            <ul class="pagination justify-content-center">
                <li class="page-item">

                    <a class="page-link" href="~/Manager/Products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag&PageNum=@PrevPageNum">Prev</a>


                </li>
                @for (int i = 0; i < ViewBag.NumOfPages; i++)
                {
                    if ((i + 1) == ViewBag.PageNum)
                    {
                        <li class="page-item active">

                            <a class="page-link" href="~/Manager/Products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag&PageNum=@(i+1)"> @(i+1)</a>


                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            /admin
                            <a class="page-link" href="~/Manager/Products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag&PageNum=@(i+1)"> @(i+1)</a>


                        </li>
                    }
                }
                <li class="page-item active">

                    <a class="page-link" href="~/Manager/Products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag&PageNum=@NextPageNum">Next</a>


                </li>
            </ul>
        </td>

    </tr>
</table>


