@model Company_Site.Identity.ApplicationUser

@{

    ViewBag.Title = "MyProfile";
}

<div class="container pl-3 p-sm-3">
    <div class="row">
        <div class="col-12">
            <h2>Your porfile details:</h2>
        </div>
    </div>

    <table class="table-bordered">
        <tr>
            <th>Username</th>
            <td>@Model.UserName</td>
        </tr>

        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>

        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>

        <tr>
            <th>Brithday</th>
            <td>@Model.Birthday</td>
        </tr>

        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>

        <tr>
            <th>Country</th>
            <td>@Model.Country</td>
        </tr>
        </table>
</div>


<a href="/home/index">Back</a>