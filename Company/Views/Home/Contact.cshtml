
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>

</style>
<!doctype html>
<html lang="en">


<body>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p>
                        If your have questions about our services; fill up the contact form
                        below.
                    </p>
                    <hr />
                </div>
            </div>
        </div>
    </section>

    <section class="form-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <form action="">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" placeholder="Full name *">

                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" class="form-control" placeholder="Email Address *">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="number" class="form-control" placeholder="Contact Number *">

                            </div>
                            <div class="form-group col-md-6">
                                <select class="form-control" name="" id="">
                                    <option selected>Region</option>
                                    <option>North America</option>
                                    <option>Europe</option>
                                    <option>Asia</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <input type="text" class="form-control" placeholder="Subject *">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12 text-center">
                                <button type="submit" class="btn btn-primary"> Send Message</button>
                            </div>
                        </div>

                    </form>

                </div>
                <div class="col-md-6 address">
                    <h5>Contact number</h5>
                    <p>
                        <a href="tel:+(62) 123 456"> +(62) 123 456 </a><br>
                    </p>
                    <h5>Email</h5>
                    <p>
                        <a href="mailto:company@gmail.com "> company@gmail.com </a><br>
                     

                    </p>
                    <h5>Address</h5>
                    <p>
                       00-032 Warszawa, ul. Złota 1, Poland
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <!-- <iframe class="embed-responsive-item" src="..."></iframe> -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2443.576962708988!2d21.010614816068884!3d52.23290317976079!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471eccf493b76f23%3A0xb4d73fa9e547dd10!2sZ%C5%82ota%201%2C%2005-800%20Warszawa!5e0!3m2!1spl!2spl!4v1641207019219!5m2!1spl!2spl"
                    width="100%" height="300px" frameborder="0" style="border:0"></iframe>

        </div>


    </section>

   
</body>

</html>